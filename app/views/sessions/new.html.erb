<div id="login"> 
  <% if notice %>
    <p id="notice"><%= notice %></p> 
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= label_tag :name %>
        <%= email_field_tag :name, params[:name] %>
      </div> 
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= link_to 'Create new user', new_user_path %>
      </div> 
      <div>
        <%= submit_tag "Login" %> 
      </div>
    </fieldset> 
  <% end %>
</div>
